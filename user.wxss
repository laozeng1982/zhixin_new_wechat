/* 用户页面的样式合计 */

.userinfo-container {
    width: 100%;
    /* height: 85%; */
    display: flex;
    flex-direction: column;
}

.userinfo-item-box {
    width: 100%;
    background: #fff;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.userinfo-item-name {
    display: flex;
    align-items: center;
    align-content: center;
    font-size: 32rpx;
    width: 100rpx;
    height: 100rpx;
    margin-left: 40rpx;
}

.userinfo-item-value-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    height: 90rpx;
    margin-right: 20rpx;
    font-size: 32rpx;
    justify-content: space-around;
}

.userinfo-item-value-image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 40rpx;
}

.userinfo-item-input {
    display: flex;
    align-items: center;
    width: 400rpx;
    padding-right: 40rpx;
    text-align: right;
    font-size: 32rpx;
}

.userinfo-item-picker {
    display: flex;
    flex-direction: row;
    padding-right: 40rpx;
    font-size: 32rpx;
}

.userinfo-item-image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 40rpx;
}

.checkbox-item {
    padding-left: 60rpx;
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    font-size: 32rpx;
}

.checkbox-item-text {
    padding-left: 60rpx;
    height: 100rpx;
    background: #fff;
    display: flex;
    font-size: 32rpx;
    color: #888;
    flex-direction: row;
    align-content: center;
    align-items: center;
}
