/* pages/normalpages/course/student_set/student_set.wxss */

.student-item-box {
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    height: 200rpx;
    width: 100%;
    border-bottom: 1rpx solid #eee;
}

.item-avatar-container {
    height: 180rpx;
    width: 180rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.item-avatar-image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 50%;
}

.item-info-contanier {
    height: 150rpx;
    width: 100%;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    flex-direction: column;
}

.item-info-sub-contanier {
    width: 100%;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    flex-direction: row;
    font-size: 32rpx;
}

.item-info-name {
    width: 150rpx;
}

.item-radio-group {
    width: 300rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.item-radio-btn {
    width: 150rpx;
}

.item-info-action-contanier {
    font-size: 32rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.item-info-action-text {
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.item-image-btn {
    height: 50rpx;
    width: 50rpx;
    border: 1rpx solid #eee;
}
