/* pages/normalpages/role/select_role/select_role.wxss */

.role-item-box-header {
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    height: 120rpx;
    flex-direction: row;
    width: 100%;
    border-bottom: 1rpx solid #888;
}

.role-item-box {
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    height: 200rpx;
    flex-direction: column;
    width: 100%;
    border-bottom: 1rpx solid #eee;
}

.role-item-value-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    height: 90rpx;
    margin-right: 20rpx;
    font-size: 32rpx;
    justify-content: space-around;
    width: 200rpx;
}

.role-item-value-image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 40rpx;
}

.role-item-name {
    margin-left: 40rpx;
    width: 100%;
}

.role-item-action {
    width: 160rpx;
}

.role-raido-item {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    margin-left: 40rpx;
}

.tips-area {
    height: 200rpx;
    align-content: center;
    align-items: center;
    width: 100%;
    justify-content: space-around;
    display: flex;
    color: #888;
}
